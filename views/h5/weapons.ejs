<h2>Halo 5 Weapons</h2>

<form method="GET" action="/weapons" id="weaponform">
    <label for="weapons">Weapons:</label>
    <select id="weapons" name="id" form="weaponform">
        <% weaponsList.forEach(weap=>{ %> 
           <option value="<%= weap.id %>"><%= weap.name %></option> 
        <%  }) %> 
    </select>
    <input type="submit" value="Go">
</form>

<ul >
    <%  weaponsData.forEach(item=>{ %> 
        
        <li class="item-wrapper"> 
            <div class = "game-item" id="img-with-name">
                <img src=<%= item.largeIconImageUrl %> height="100px" >
                <%= item.name %> 
                <form>
                    <input type="submit" value="favorite"
                </form>
            </div>
            <div class="game-item">
                <u>Type:</u> <%= item.type %> <br>
                <u>Description:</u> <%= item.description %> <br>
            </div>
            </li> <br>

        
    <% }) %> 
</ul>

