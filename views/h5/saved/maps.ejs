<div class="page-display row">
  <h2>MY MAPS</h2>
  <span class="span-tab">
    <button class="page-disp-button"><a href="/h5/maps">ADD MORE MAPS</a></button>
    <button class="page-disp-button"><a href="/h5/saved/weapons">SEE MY WEAPONS</a></button>
    <button class="page-disp-button"><a href="/h5/saved/strategies/">SEE STRATEGIES</a></button>
  </span>

  <div class="column" id="items-list">
    
   <ul >
      <%  savedItems.forEach(user=>{ %> 
          <% if(currentUser.dataValues.id===user.id){ %>
            <% user.maps.forEach(savedMap=>{ %>
              
              <div class="row">
                <li class="item-wrapper"> 
                  <div class = "game-item" id="img-with-name">
                      <img src=<%= savedMap.imageUrl %> height="80px" >
                      Name: <%= savedMap.name %> 
                    <form method="POST" action="/h5/saved/maps/<%= savedMap.id  %>/?_method=DELETE ">
                          <input type="hidden" type="text" name="mapId" value="<%= savedMap.id %> ">
                          <input type="hidden" type="text" name="userId" value="<%= user.id %> ">
                          <input type="submit" value="REMOVE" class="page-disp-button">
                      </form>
                  </div>
                  <div class="game-item tabentry" id="game-item-desc">
                      <u>Description:</u> <%= savedMap.description %> <br>
                  </div>
                </li> 
              </div>
              <br>    
          <% }) %> 
          <% } %> 
      <% }) %> 
    </ul>
  </div>
</div>
