<main>
    <div class="tabentry">
        <h4>SUMMARY</h4>
        Gamertag: <%= haloMCC.gamertag %> <br>
        Emblem: <img src="<%= haloMCC.emblem %>"> <br>
        Games Played: <%= haloMCC.gamesPlayed %> <br>
        Wins:  <%= haloMCC.wins %>  <br>
        Losses:  <%= haloMCC.losses %>  <br>
        WinRatio:  <%= haloMCC.winRatio.toPrecision(2) %>  <br>
        Kills per Game:  <%= haloMCC.killsPerGame.toPrecision(2) %>  <br>
        KD Ratio:  <%= haloMCC.killDeathRatio.toPrecision(2) %>  <br>
    </div>
    <div class="tabentry">
        <h4>LAST 20 GAMES:</h4>
        <ol>
            <% haloMCC.last20.forEach(game=>{ %>
                <li>
                    <% if(game === -1){ %>
                        <%= 'Loss' %>
                    <% } else if (game===1){ %>
                        <%= 'Win' %>
                    <% } %>
                </li><br>
            <% }) %> 
        </ol>
    </div>
</main>
